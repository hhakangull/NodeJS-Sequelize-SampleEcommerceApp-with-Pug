extends ../layouts/main-layout
block content       
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="/css/auth.css")
    body
        #login           
            .container
                #login-row.row.justify-content-center.align-items-center
                    #login-column.col-md-6
                        #login-box.col-md-12
                            form#login-form.form(action='register' method='POST')
                                h3.text-center.text-info SIGN UP
                                if sonuc
                                    p.alert.alert-danger Kayıt Başarısız oldu.
                                else
                                    br
                                .form-group
                                    label.text-info(for='username') Username:
                                    br
                                    input.form-control(type='text' name='username' id='username')
                                .form-group
                                    label.text-info(for='password') Password:
                                    br
                                    input.form-control(type='text' name='password' id='password')
                                .form-group                                   
                                    input.btn.btn-info.btn-md(type='submit' name='submit' value='SIGN UP' style='width: 150px')
                                
                                #register-link.text-right
                                    a.text-info(href='/login') Login here
    