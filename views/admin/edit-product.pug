extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content

    div(ng-app="")
        h1 Product -- #{product.name}
        table.table
            tr
                td
                    form(action="/admin/products" method="POST")
            
                        input(type="hidden" name="id" value=`${product.id}`)

                        .form-group.row
                            label(for="name").col-sm-2.col-form-label Product Name
                            .col-sm-10
                                input.form-control#name(type="text" name="name"  value=`${product.name}`)  

                        .form-group.row
                            label(for="price").col-sm-2.col-form-label Price
                            .col-sm-10
                                input.form-control#price(type="text" name="price" value=`${product.price}`)

                        .form-group.row
                            label(for="imageUrl").col-sm-2.col-form-label Image
                            .col-sm-10
                                input.form-control#image(type="text" name="imageUrl"  value=`${product.imageUrl}`) 
                        
                        .form-group.row
                            label(for="categoryid").col-sm-2.col-form-label Category
                            .col-sm-10
                                select.form-control#categoryid(name="categoryid")
                                    option(value="-1") Select Category
                                    each category in categories
                                        option(value=`${category.id}` selected=category.id===product.categoryId) #{category.name}

                        .form-group.row
                            label(for="description").col-sm-2.col-form-label Description
                            .col-sm-10
                                textarea.form-control(name="description" cols="30" rows="10") #{product.description}

                        .form-group.row
                            .col-sm-10.offset-sm-2
                                input(type="submit" value="Save Product").btn.btn-primary  
                td(style="width: 200px")
                    img(ng-src=`/img/${product.imageUrl}` alt=`${product.description}`).card-img-top(style="width: 250px").rounded.float-righ
                    h3(ng-bind="test")
                 
           
    